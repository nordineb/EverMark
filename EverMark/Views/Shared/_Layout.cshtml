@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(string.IsNullOrEmpty(ViewBag.Title) ? "Evernote ♥ Markdown" : ViewBag.Title + " - Evernote ♥ Markdown")</title>
    @Styles.Render("~/Content/css")
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @if (User.Identity.IsAuthenticated)
                {
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                }
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Evernote ♥ Markdown</a>
            </div>
            <div class="collapse navbar-collapse navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Notes", "Index", "Notes")</li>
                        <li>@Html.ActionLink("Log off", "Logoff", "Home")</li>
                    </ul>
                }
            </div>
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
